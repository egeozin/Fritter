<div id= "login-section">
    <p id = "login">If you already have an account, you can login!</p>
    <div>
    	<input placeholder="Name" id="name-input-login" type="text">
    	<span id='login-username' class="warning-login-username-1"></span>
    </div>
    <div>
    	<input value="" id="password-input-login" type="text">
    	<span id='login-password' class="warning-login-password-1">You entered an empty string in one or more of the fields above!</span>
    </div>
    <button class="btn" id="login-button">Login</button>
</div>